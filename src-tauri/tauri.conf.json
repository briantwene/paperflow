{
  "productName": "paperflow",
  "version": "../package.json",
  "identifier": "com.paperflow.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PaperFlow",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "",
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
  "https://github.com/briantwene/paperflow/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJEQjI2OENBQUQ4MDE5RDgKUldUWUdZQ3R5bWl5dldva2RzcmlPbEJTRU5UWmxSUHFqeVhTd25PdmxBTDh1dHcxV3RraVJMNnYK"
    }
  }
}
